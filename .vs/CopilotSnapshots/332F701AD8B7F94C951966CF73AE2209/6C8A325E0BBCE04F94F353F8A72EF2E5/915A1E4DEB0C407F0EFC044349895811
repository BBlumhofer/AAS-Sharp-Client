using System;
using System.Collections;
using System.Collections.Generic;
using System.Linq;
using System.Reflection;
using System.Threading.Tasks;
using BaSyx.Models.AdminShell;

namespace AasSharpClient.Tools
{
    // Reflection-based helpers to interact with BaSyx model types without
    // depending on specific concrete implementations of collection wrappers.
    public static class BasyxBrowser
    {
        public static IEnumerable<ISubmodelElement> GetElements(ISubmodelElementCollection collection)
        {
            if (collection == null) yield break;

            // Try common patterns: collection.Value.Value (wrapper.Value -> List<ISubmodelElement>)
            var collType = collection.GetType();
            var valueProp = collType.GetProperties().FirstOrDefault(p => p.Name == "Value");
            if (valueProp != null)
            {
                var wrapper = valueProp.GetValue(collection);
                if (wrapper != null)
                {
                    var innerProp = wrapper.GetType().GetProperties().FirstOrDefault(p => p.Name == "Value");
                    if (innerProp != null)
                    {
                        var list = innerProp.GetValue(wrapper) as IEnumerable;
                        if (list != null)
                        {
                            foreach (var o in list)
                            {
                                if (o is ISubmodelElement sme)
                                    yield return sme;
                                else
                                {
                                    // try to cast via reflection
                                    var idShortProp = o.GetType().GetProperty("IdShort");
                                    if (idShortProp != null)
                                    {
                                        // we cannot cast; skip
                                    }
                                }
                            }
                            yield break;
                        }
                    }

                    // if wrapper itself is IEnumerable
                    if (wrapper is IEnumerable enumerable)
                    {
                        foreach (var o in enumerable)
                        {
                            if (o is ISubmodelElement sme) yield return sme;
                        }
                        yield break;
                    }
                }
            }

            // Try direct properties exposed by some implementations
            var subElemsProp = collType.GetProperties().FirstOrDefault(p => p.Name == "SubmodelElements") ?? collType.GetProperties().FirstOrDefault(p => p.Name == "Elements");
            if (subElemsProp != null)
            {
                var list = subElemsProp.GetValue(collection) as IEnumerable;
                if (list != null)
                {
                    foreach (var o in list)
                    {
                        if (o is ISubmodelElement sme) yield return sme;
                    }
                    yield break;
                }
            }

            yield break;
        }

        public static IProperty? FindProperty(ISubmodelElementCollection collection, string idShort)
        {
            foreach (var el in GetElements(collection))
            {
                if (string.Equals(el.IdShort, idShort, StringComparison.Ordinal))
                {
                    if (el is IProperty p) return p;
                    // some implementations provide generic Property<T> implementing IProperty
                    var elType = el.GetType();
                    if (typeof(IProperty).IsAssignableFrom(elType))
                        return (IProperty)el;
                }
            }
            return null;
        }

        public static async Task<string?> GetPropertyValueAsStringAsync(IProperty property)
        {
            if (property == null) return null;
            // try GetValueAsync or GetValue via reflection
            var type = property.GetType();
            var getAsync = type.GetMethod("GetValueAsync");
            if (getAsync != null)
            {
                var task = getAsync.Invoke(property, null) as Task;
                if (task != null)
                {
                    await task.ConfigureAwait(false);
                    var resultProp = task.GetType().GetProperties().FirstOrDefault(p => p.Name == "Result");
                    var result = resultProp?.GetValue(task);
                    return UnwrapValueToString(result);
                }
            }

            var get = type.GetMethod("GetValue") ?? type.GetMethod("Get");
            if (get != null)
            {
                var result = get.Invoke(property, null);
                return UnwrapValueToString(result);
            }

            // try direct Value property
            var valProp = type.GetProperties().FirstOrDefault(p => p.Name == "Value");
            if (valProp != null)
            {
                var v = valProp.GetValue(property);
                return UnwrapValueToString(v);
            }

            return null;
        }

        private static string? UnwrapValueToString(object? obj)
        {
            if (obj == null) return null;
            // primitive or string -> return
            var t = obj.GetType();
            if (obj is string) return (string)obj;
            if (obj is bool b) return b.ToString().ToLowerInvariant();
            if (t.IsPrimitive || t.IsEnum || t == typeof(decimal)) return obj.ToString();

            // try to dig into nested Value properties until we get a primitive or string
            var current = obj;
            for (int i = 0; i < 8 && current != null; i++)
            {
                var prop = current.GetType().GetProperties().FirstOrDefault(p => p.Name == "Value");
                if (prop == null) break;
                current = prop.GetValue(current);
                if (current == null) return null;
                if (current is string) return (string)current;
                if (current is bool cb) return cb.ToString().ToLowerInvariant();
                var ct = current.GetType();
                if (ct.IsPrimitive || ct.IsEnum || ct == typeof(decimal)) return current.ToString();
            }

            return obj.ToString();
        }

        public static async Task<bool> SetPropertyValueAsync(IProperty property, object value)
        {
            if (property == null) return false;
            var type = property.GetType();
            var setAsync = type.GetMethod("SetValueAsync");
            if (setAsync != null)
            {
                var task = setAsync.Invoke(property, new object[] { value }) as Task;
                if (task != null)
                {
                    await task.ConfigureAwait(false);
                    return true;
                }
            }

            var set = type.GetMethod("SetValue") ?? type.GetMethod("Set");
            if (set != null)
            {
                set.Invoke(property, new object[] { value });
                return true;
            }

            var valProp = type.GetProperty("Value");
            if (valProp != null && valProp.CanWrite)
            {
                // try to coerce to property type
                valProp.SetValue(property, value);
                return true;
            }

            return false;
        }
    }
}
