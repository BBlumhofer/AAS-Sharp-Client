using System.Threading.Tasks;
using BaSyx.Models.AdminShell;

namespace AasSharpClient.Adapters
{
    // Adapter interface to integrate generated POCOs with BaSyx .NET SDK types.
    public interface IBasyxAdapter
    {
        Task UploadPropertyAsync<T>(ISubmodelElement parent, string propertyName, T value);
        Task UploadElementAsync(ISubmodelElement element);
        Task<object?> InvokeOperationAsync(string operationId, params object[] inputs);
    }
}
