using System.Collections.Generic;
using System.Threading.Tasks;
using BaSyx.Models.AdminShell;
using BaSyx.Models.Extensions;
using AasSharpClient.Adapters;

namespace AasSharpClient.Models
{
    // POCO representation wrapping BaSyx SubmodelElement types
    public partial class Step
    {
        public ISubmodelElementCollection Content { get; set; } = new SubmodelElementCollection("Step");

        public IProperty StepTitle => BrowseProperty(StepTitleIdShort);
        public IProperty Status => BrowseProperty(StatusIdShort);
        public IProperty Station => BrowseProperty(StationIdShort);

        public const string StepTitleIdShort = "StepTitle";
        public const string StatusIdShort = "Status";
        public const string StationIdShort = "Station";

        [System.Text.Json.Serialization.JsonIgnore]
        public IBasyxAdapter? Adapter { get; set; }

        public Step() { }

        public Step(ISubmodelElementCollection content)
        {
            Content = content;
        }

        // Domain-friendly constructor
        public Step(string idShort, string title, StepStatusEnum status, Action action, string station, SchedulingContainer scheduling, string enterprise, string workcentre)
        {
            Content = new SubmodelElementCollection(idShort);
            Content.Value.Value.Add(new Property<string>(StepTitleIdShort, title));
            Content.Value.Value.Add(new Property<string>(StatusIdShort, status.ToString()));
            Content.Value.Value.Add(new Property<string>(StationIdShort, station));

            // add action as nested collection
            if (action != null)
                Content.Value.Value.Add(action.Content);

            // scheduling as properties
            if (scheduling != null)
            {
                var s = new SubmodelElementCollection("Scheduling");
                s.Value.Value.Add(new Property<string>("Start", scheduling.Start));
                s.Value.Value.Add(new Property<string>("End", scheduling.End));
                Content.Value.Value.Add(s);
            }
        }

        public int GetNumber()
        {
            var digits = System.Text.RegularExpressions.Regex.Replace(Content.IdShort ?? "", "[^0-9]", "");
            return int.TryParse(digits, out var n) ? n : 0;
        }

        public async Task UpdateActionAsync(Action action)
        {
            if (Adapter != null)
            {
                await Adapter.UploadElementAsync(action.Content).ConfigureAwait(false);
            }
        }

        private IProperty BrowseProperty(string idShort)
        {
            var collectionValue = Content.Value;
            foreach (var el in collectionValue.Value)
            {
                if (el.IdShort == idShort && el is IProperty p)
                {
                    return p;
                }
            }
            var prop = new Property<string>(idShort);
            collectionValue.Value.Add(prop);
            return prop;
        }
    }
}
