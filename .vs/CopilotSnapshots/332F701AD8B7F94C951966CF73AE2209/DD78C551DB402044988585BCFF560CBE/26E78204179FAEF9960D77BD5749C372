using System.Collections.Generic;
using System.Threading.Tasks;
using BaSyx.Models.AdminShell;
using BaSyx.Models.Extensions;
using AasSharpClient.Adapters;

namespace AasSharpClient.Models
{
    public partial class Action
    {
        public const string MODELTYPE = "Action";
        public const string TEMPLATE_ID_SHORT = "Action00";

        public ISubmodelElementCollection Content { get; set; } = new SubmodelElementCollection("Action");

        public string IdShort
        {
            get => Content.IdShort;
            set => throw new System.NotSupportedException("IdShort is read-only on BaSyx referable types");
        }

        public int Number
        {
            get
            {
                var digits = System.Text.RegularExpressions.Regex.Replace(Content.IdShort ?? "", "[^0-9]", "");
                return int.TryParse(digits, out var n) ? n : 0;
            }
            set { /* noop */ }
        }

        public IProperty? Title => BrowseMaybeProperty("Title");
        public IProperty? Status => BrowseMaybeProperty("Status");

        public Dictionary<string, object>? Params { get; set; }

        [System.Text.Json.Serialization.JsonIgnore]
        public IBasyxAdapter? Adapter { get; set; }

        public Action() { }

        public Action(ISubmodelElement action, Step parent)
        {
            if (action is ISubmodelElementCollection smc)
            {
                Content = smc;
            }
        }

        // New domain-friendly constructor matching test
        public Action(string idShort, string title, ActionStatusEnum status, InputParameters inputs, FinalResultData results, SkillReference skillRef, string machineName)
        {
            // Populate Content (a SubmodelElementCollection) and set properties
            Content = new SubmodelElementCollection(idShort);
            Content.Value.Value.Add(new Property<string>("Title", title));
            Content.Value.Value.Add(new Property<string>("Status", status.ToString()));

            // store params/results as properties for simplicity
            if (inputs?.Params != null)
            {
                var inColl = new SubmodelElementCollection("InputParameters");
                foreach (var kv in inputs.Params)
                    inColl.Value.Value.Add(new Property<string>(kv.Key, kv.Value));
                Content.Value.Value.Add(inColl);
            }

            if (results?.Data != null)
            {
                var outColl = new SubmodelElementCollection("FinalResult");
                foreach (var kv in results.Data)
                    outColl.Value.Value.Add(new Property<string>(kv.Key, kv.Value?.ToString()));
                Content.Value.Value.Add(outColl);
            }
        }

        public async Task SetParamAsync(string key, object value)
        {
            if (Params == null) Params = new Dictionary<string, object>();
            Params[key] = value;
            if (Adapter != null)
            {
                // Upload to parent collection as property
                await Adapter.UploadPropertyAsync(this.Content, key, value).ConfigureAwait(false);
            }
        }

        public async Task FillParametersAsync(IEnumerable<System.Func<string, object?, Task>> fillers)
        {
            if (Params == null) return;
            foreach (var kv in Params)
            {
                foreach (var f in fillers)
                {
                    await f(kv.Key, kv.Value);
                }
            }
        }

        private IProperty? BrowseMaybeProperty(string idShort)
        {
            var collectionValue = Content.Value;
            foreach (var el in collectionValue.Value)
            {
                if (el.IdShort == idShort && el is IProperty p)
                {
                    return p;
                }
            }
            return null;
        }
    }
}
