using System.Threading.Tasks;
using AasSharpClient.Adapters;
using AasSharpClient.Basyx;

namespace AasSharpClient.Adapters
{
    // Minimal mock adapter for PoC — replace with real basyx-dotnet integration.
    public class MockBasyxAdapter : IBasyxAdapter
    {
        public Task<object?> InvokeOperationAsync(string operationId, params object[] inputs)
        {
            return Task.FromResult<object?>(null);
        }

        public Task UploadElementAsync(AasSharpClient.Basyx.SubmodelElement element)
        {
            // noop for PoC
            return Task.CompletedTask;
        }

        public Task UploadPropertyAsync<T>(AasSharpClient.Basyx.SubmodelElement parent, string propertyName, T value)
        {
            // find property with idShort == propertyName or add
            if (parent is AasSharpClient.Basyx.SubmodelElementCollection smc)
            {
                var prop = smc.Value.Find(e => e.IdShort == propertyName) as AasSharpClient.Basyx.Property;
                if (prop == null)
                {
                    prop = new AasSharpClient.Basyx.Property { IdShort = propertyName, Value = value?.ToString() };
                    smc.Value.Add(prop);
                }
                else
                {
                    prop.Value = value?.ToString();
                }
            }

            return Task.CompletedTask;
        }
    }
}
