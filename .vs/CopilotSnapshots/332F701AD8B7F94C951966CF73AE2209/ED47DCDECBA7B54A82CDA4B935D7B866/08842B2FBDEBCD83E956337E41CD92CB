using System.Threading.Tasks;
using AasSharpClient.Models;

namespace AasSharpClient.Adapters
{
    // Minimal adapter interface to integrate generated POCOs with basyx-dotnet.
    public interface IBasyxAdapter
    {
        Task UploadPropertyAsync<T>(SubmodelElement parent, string propertyName, T value);
        Task UploadElementAsync(SubmodelElement element);
        // Optional: invoke operations, CRUD, fetch submodels, etc.
        Task<object?> InvokeOperationAsync(string operationId, params object[] inputs);
    }
}
