using System.Threading.Tasks;
using AasSharpClient.Adapters;
using AasSharpClient.Basyx;

namespace AasSharpClient.Adapters
{
    // Minimal mock adapter for PoC — replace with real basyx-dotnet integration.
    public class MockBasyxAdapter : IBasyxAdapter
    {
        public Task<object?> InvokeOperationAsync(string operationId, params object[] inputs)
        {
            return Task.FromResult<object?>(null);
        }

        public Task UploadElementAsync(SubmodelElement element)
        {
            // noop for PoC
            return Task.CompletedTask;
        }

        public Task UploadPropertyAsync<T>(SubmodelElement parent, string propertyName, T value)
        {
            // find property with idShort == propertyName or add
            if (parent is SubmodelElementCollection smc)
            {
                var prop = smc.Value.Find(e => e.IdShort == propertyName) as Property;
                if (prop == null)
                {
                    prop = new Property { IdShort = propertyName, Value = value?.ToString() };
                    smc.Value.Add(prop);
                }
                else
                {
                    prop.Value = value?.ToString();
                }
            }

            return Task.CompletedTask;
        }
    }
}
