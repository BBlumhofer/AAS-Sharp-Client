using System;
using System.Collections.Generic;
using System.Text.Json.Serialization;
using System.Threading.Tasks;
using AasSharpClient.Adapters;

namespace AasSharpClient.Models
{
    // Generated POCO for ProductionPlan submodel
    public partial class ProductionPlan
    {
        [JsonPropertyName("isFinished")]
        public string IsFinished { get; set; } = "false";

        [JsonPropertyName("steps")]
        public List<Step> Steps { get; set; } = new();

        [JsonIgnore]
        public IBasyxAdapter? Adapter { get; set; }

        public ProductionPlan() { }

        public async Task<bool> IsFinishedAsync()
        {
            return bool.TryParse(IsFinished, out var v) && v;
        }

        public async Task CompleteAsync()
        {
            IsFinished = "true";
            if (Adapter != null)
            {
                await Adapter.UploadPropertyAsync(this, nameof(IsFinished), IsFinished);
            }
        }

        public async Task UploadStepAsync(Step step)
        {
            if (Adapter != null)
            {
                await Adapter.UploadElementAsync(step);
            }
        }
    }
}
