using System.Collections.Generic;
using System.Threading.Tasks;
using AasSharpClient.Adapters;
using AasSharpClient.Basyx;

namespace AasSharpClient.Models
{
    // Generated POCO for ProductionPlan submodel using BaSyx models
    public partial class ProductionPlan
    {
        public SubmodelElementCollection Content { get; set; } = new SubmodelElementCollection();

        public Property IsFinished => BrowseProperty("IsFinished");

        public List<Step> Steps { get; set; } = new();

        [System.Text.Json.Serialization.JsonIgnore]
        public IBasyxAdapter? Adapter { get; set; }

        public ProductionPlan() { }

        public async Task<bool> IsFinishedAsync()
        {
            return bool.TryParse(IsFinished.Value, out var v);
        }

        public async Task CompleteAsync()
        {
            IsFinished.Value = "true";
            if (Adapter != null)
            {
                await Adapter.UploadPropertyAsync(this.Content, IsFinished.IdShort, IsFinished.Value);
            }
        }

        public async Task UploadStepAsync(Step step)
        {
            if (Adapter != null)
            {
                await Adapter.UploadElementAsync(step.Content);
            }
        }

        private Property BrowseProperty(string idShort)
        {
            foreach (var el in Content.Value)
            {
                if (el.IdShort == idShort && el is Property p)
                {
                    return p;
                }
            }
            var prop = new Property { IdShort = idShort, Value = "false" };
            Content.Value.Add(prop);
            return prop;
        }
    }
}
