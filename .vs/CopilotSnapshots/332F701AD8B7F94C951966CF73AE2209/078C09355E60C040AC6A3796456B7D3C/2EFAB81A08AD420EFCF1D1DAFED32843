using System.Collections.Generic;
using System.Threading.Tasks;
using AasSharpClient.Adapters;

namespace AasSharpClient.Models
{
    // POCO representation wrapping basyx SubmodelElement types
    public partial class Step
    {
        public SubmodelElementCollection Content { get; set; } = new SubmodelElementCollection();

        public Property StepTitle => BrowseProperty(StepTitleIdShort);
        public Property Status => BrowseProperty(StatusIdShort);
        public Property Station => BrowseProperty(StationIdShort);

        public const string StepTitleIdShort = "StepTitle";
        public const string StatusIdShort = "Status";
        public const string StationIdShort = "Station";

        [System.Text.Json.Serialization.JsonIgnore]
        public IBasyxAdapter? Adapter { get; set; }

        public Step() { }

        public Step(SubmodelElementCollection content)
        {
            Content = content;
        }

        public int GetNumber()
        {
            var digits = System.Text.RegularExpressions.Regex.Replace(Content.IdShort ?? "", "[^0-9]", "");
            return int.TryParse(digits, out var n) ? n : 0;
        }

        public async Task UpdateActionAsync(Action action)
        {
            if (Adapter != null)
            {
                await Adapter.UploadElementAsync(action.Content);
            }
        }

        private Property BrowseProperty(string idShort)
        {
            foreach (var el in Content.Value)
            {
                if (el.IdShort == idShort && el is Property p)
                {
                    return p;
                }
            }
            var prop = new Property { IdShort = idShort, Value = null };
            Content.Value.Add(prop);
            return prop;
        }
    }
}
