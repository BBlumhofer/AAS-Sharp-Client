using System.Collections.Generic;
using System.Threading.Tasks;
using BaSyx.Models;
using AasSharpClient.Adapters;

namespace AasSharpClient.Models
{
    public partial class Action
    {
        public const string MODELTYPE = "Action";
        public const string TEMPLATE_ID_SHORT = "Action00";

        public SubmodelElementCollection Content { get; set; } = new SubmodelElementCollection();

        public string IdShort
        {
            get => Content.IdShort;
            set => Content.IdShort = value;
        }

        public int Number
        {
            get
            {
                var digits = System.Text.RegularExpressions.Regex.Replace(Content.IdShort ?? "", "[^0-9]", "");
                return int.TryParse(digits, out var n) ? n : 0;
            }
            set { /* noop */ }
        }

        public Property? Title => BrowseMaybeProperty("Title");
        public Property? Status => BrowseMaybeProperty("Status");

        public Dictionary<string, object>? Params { get; set; }

        [System.Text.Json.Serialization.JsonIgnore]
        public IBasyxAdapter? Adapter { get; set; }

        public Action() { }

        public Action(SubmodelElement action, Step parent)
        {
            // initialize from existing basyx element
            if (action is SubmodelElementCollection smc)
            {
                Content = smc;
            }
        }

        public async Task SetParamAsync(string key, object value)
        {
            if (Params == null) Params = new Dictionary<string, object>();
            Params[key] = value;
            if (Adapter != null)
            {
                await Adapter.UploadPropertyAsync(this.Content, key, value);
            }
        }

        public async Task FillParametersAsync(IEnumerable<System.Func<string, object?, Task>> fillers)
        {
            if (Params == null) return;
            foreach (var kv in Params)
            {
                foreach (var f in fillers)
                {
                    await f(kv.Key, kv.Value);
                }
            }
        }

        private Property? BrowseMaybeProperty(string idShort)
        {
            foreach (var el in Content.Value)
            {
                if (el.IdShort == idShort && el is Property p)
                {
                    return p;
                }
            }
            return null;
        }
    }
}
